record(calc, "$(POZ):trigger")
{
    field(DESC, "Test trigger")
    field(SCAN, "1 second")
    field(CALC, "VAL >= 5 ? VAL : VAL + 1")
    field(PINI, "NO")
    field(DISA, "1")
}

record(calcout, "$(POZ):t$(N)")
{
    field(DESC, "PV trigger $(N)")
    field(SCAN, "Passive")
    field(CALC, "A")
    field(OUT,  "$(POZ):v$(N).VAL PP")
    field(OOPT, "On Change")
    field(INPA, "$(POZ):trigger.VAL CP")
}

record(waveform,"$(POZ):v$(N)")
{
    field(DESC, "PV $(N)")
    field(FTVL, "DOUBLE")
    field(NELM, 10000)
}
